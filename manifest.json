{
  "manifest_version": 3,
  "name": "Subtitle Extractor",
  "version": "1.2.0",
  "description": "Extract subtitles from Bilibili and YouTube videos",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.bilibili.com/*",
    "https://api.bilibili.com/*",
    "https://*.bilivideo.com/*",
    "https://*.hdslb.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/video/*"],
      "js": ["content-scripts/shared.js", "content-scripts/bilibili.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content-scripts/shared.js", "content-scripts/youtube.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected/bilibili-injector.js", "injected/youtube-injector.js"],
      "matches": ["https://www.bilibili.com/*", "https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
